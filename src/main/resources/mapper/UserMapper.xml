<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nero.mybatis.relation.mapper.UserMapper">
    <!-- 一对一查询所有用户信息：级联查询的第一种方法（嵌套查询，执行两个SQL语句）-->
    <resultMap id="userMap" type="com.nero.mybatis.relation.domain.pojo.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
        <!-- 一对一级联查询-->
        <association property="idcard" column="id" javaType="com.nero.mybatis.relation.domain.po.IdcardPO"
                     select="com.nero.mybatis.relation.mapper.IdcardMapper.getIdcardById"/>
    </resultMap>
    <!-- 查询所有用户信息 -->
    <select id="getAllUser" resultMap="userMap">
        select * from user
    </select>

    <!--一对一查询所有用户信息：级联查询的第二种方法（嵌套结果，执行一个SQL语句）-->
    <resultMap id="userMap2" type="com.nero.mybatis.relation.domain.pojo.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
        <!-- 一对一级联查询-->
        <association property="idcard" column="id" javaType="com.nero.mybatis.relation.domain.po.IdcardPO">
            <id property="id" column="id"/>
            <result property="cardNum" column="card_num"/>
            <result property="date" column="date"/>
        </association>
    </resultMap>
    <!-- 查询所有用户信息 -->
    <select id="getAllUser2" resultMap="userMap2">
        select *
        from user
        inner join id_card
        where user.id = id_card.user_id
    </select>

    <!-- 一对一查询所有用户信息：连接查询（使用POJO存储结果）-->
    <select id="getAllUser3" resultType="com.nero.mybatis.relation.domain.pojo.User2">
        select user.*,ic.card_num as cardNum,ic.date
        from user
        inner join id_card as ic
        where user.id = ic.user_id
    </select>
</mapper>